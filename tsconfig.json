{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types", "./src"],
		"types": ["node"] // Explicitly specify the types we want to include
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts" // Exclude test files if you have any
	]
}
